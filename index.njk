{%- for spotlight in collections.spotlight %}
<section class="spotlight style2 orient-{{ spotlight.data.orientation }} content-align-left image-position-center onscroll-image-fade-in onscroll-content-fade-left" id="first">
	<div class="content">
		<h2>{{ spotlight.data.title }}</h2>
		<p>{{ spotlight.data.description | safe }}</p>
		<ul class="actions stacked">
			<!-- <li><a href="{{ spotlight.data.permalink }}" class="button">SABER MÁS</a></li> -->
		</ul>
	</div>
	<div class="image">
		<img src="images/{{ spotlight.data.image }}.jpg" alt="" />
	</div>
</section>
{% endfor -%}

